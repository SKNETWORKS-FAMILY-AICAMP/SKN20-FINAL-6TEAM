# MySQL Database
MYSQL_ROOT_PASSWORD=bizi123
MYSQL_DATABASE=final_test
MYSQL_USER=bizi
MYSQL_PASSWORD=bizi123
MYSQL_HOST=localhost
MYSQL_PORT=3306

# JWT (Backend) — 필수, 32자 이상
# 생성: python -c "import secrets; print(secrets.token_urlsafe(48))"
JWT_SECRET_KEY=
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# Cookie
COOKIE_SECURE=false
COOKIE_SAMESITE=lax

# Test Login (set to true to enable /auth/test-login endpoint)
ENABLE_TEST_LOGIN=true

# Google OAuth2 (미구현 - 테스트 로그인 사용)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# OpenAI (RAG 서비스용)
OPENAI_API_KEY=your-openai-api-key

# External APIs (지원사업 연동)
BIZINFO_API_KEY=your-bizinfo-api-key
KSTARTUP_API_KEY=your-kstartup-api-key

# Tavily (웹 검색)
TAVILY_API_KEY=your-tavily-api-key

# RAG API Key (설정 시 RAG 엔드포인트 인증 활성화, 비워두면 비활성화)
# 생성: python -c "import secrets; print(secrets.token_urlsafe(32))"
RAG_API_KEY=

# Frontend
VITE_API_URL=http://localhost:8000
VITE_RAG_URL=http://localhost:8001

# RAG Service Toggle
RAG_ENABLED=true  # Set to "false" to disable RAG service

# RAG Advanced Search Settings
ENABLE_HYBRID_SEARCH=true       # Hybrid Search (BM25+Vector+RRF) 활성화
VECTOR_SEARCH_WEIGHT=0.7        # 벡터 검색 가중치 (0.0=BM25만, 1.0=벡터만)
ENABLE_RERANKING=true           # Re-ranking 활성화
MULTI_QUERY_COUNT=3             # Multi-Query 생성 개수
MIN_DOC_EMBEDDING_SIMILARITY=0.2  # 문서별 최소 임베딩 유사도 (0.0~1.0)

# RAG Domain Classification Settings
ENABLE_VECTOR_DOMAIN_CLASSIFICATION=true   # 벡터 기반 도메인 분류 활성화
ENABLE_LLM_DOMAIN_CLASSIFICATION=false     # LLM 기반 도메인 분류 (비교용, 추가 비용 발생)

# Reranker Settings
RERANKER_TYPE=cross-encoder           # Reranker 타입 (cross-encoder, llm)
CROSS_ENCODER_MODEL=BAAI/bge-reranker-base  # Cross-Encoder 모델명

# Frontend RAG Streaming
VITE_RAG_STREAMING=true      # RAG 응답 스트리밍 활성화 (SSE)

UPSTAGE_API_KEY=
